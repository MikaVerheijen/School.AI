{
    "manifest_version": 3,
    "name": "Homework Helper AI",
    "version": "1.0",
    "description": "Humanize AI-generated homework text.",
    "permissions": ["scripting", "activeTab", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  